<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#F1F2FA"
    android:layout_height="match_parent"
   >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <LinearLayout
                    android:layout_marginBottom="@dimen/padding20"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_marginTop="@dimen/padding20"
                        android:layout_marginLeft="@dimen/padding15"
                        android:textColor="@color/black"
                        android:layout_marginRight="@dimen/padding20"
                        android:textSize="@dimen/padding22"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="House Options (Multiple CheckBox -The Options available can be clickable as a checkbox)" />


                    <RelativeLayout
                        android:id="@+id/RR_bath"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/padding20"
                        android:layout_marginLeft="@dimen/padding15"
                        android:layout_marginRight="@dimen/padding15"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_toLeftOf="@+id/RR_filter"
                        android:background="@drawable/roundbttn_white_one">

                        <ImageView
                            android:id="@+id/img_bath"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/padding10"
                            android:layout_centerVertical="true"
                            android:src="@drawable/restroom"
                            android:layout_width="@dimen/padding30"
                            android:layout_height="@dimen/padding30"
                            >
                        </ImageView>


                        <RelativeLayout
                            android:orientation="vertical"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/padding20"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/img_bath"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            >

                            <TextView
                                android:id="@+id/txt_bath"
                                android:singleLine="true"
                                android:textColor="@color/black"
                                android:textSize="@dimen/padding20"
                                android:textStyle="bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Private bathroom" />

                            <TextView
                                android:layout_below="@+id/txt_bath"
                                android:singleLine="true"
                                android:textColor="@color/black"
                                android:textSize="@dimen/padding20"
                                android:textStyle="bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="in the room" />

                        </RelativeLayout>


                        <ImageView
                            android:id="@+id/img_one"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/padding10"
                            android:layout_centerVertical="true"
                            android:src="@drawable/circle_gray"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            >
                        </ImageView>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/RR_air_condition"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/padding20"
                        android:layout_marginLeft="@dimen/padding15"
                        android:layout_marginRight="@dimen/padding15"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_toLeftOf="@+id/RR_filter"
                        android:background="@drawable/roundbttn_white_one">

                        <ImageView
                            android:id="@+id/img_air"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/padding10"
                            android:layout_centerVertical="true"
                            android:src="@drawable/air_condotion"
                            android:layout_width="@dimen/padding30"
                            android:layout_height="@dimen/padding30"
                            >
                        </ImageView>


                        <RelativeLayout
                            android:orientation="vertical"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/padding20"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/img_air"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            >

                            <TextView
                                android:id="@+id/txt_air"
                                android:singleLine="true"
                                android:textColor="@color/black"
                                android:textSize="@dimen/padding20"
                                android:textStyle="bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Air" />

                            <TextView
                                android:layout_below="@+id/txt_air"
                                android:singleLine="true"
                                android:textColor="@color/black"
                                android:textSize="@dimen/padding20"
                                android:textStyle="bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Conditioned" />

                        </RelativeLayout>

                        <ImageView
                            android:id="@+id/img_two"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/padding10"
                            android:layout_centerVertical="true"
                            android:src="@drawable/circle_gray"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            >
                        </ImageView>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/RR_heating"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/padding20"
                        android:layout_marginLeft="@dimen/padding15"
                        android:layout_marginRight="@dimen/padding15"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_toLeftOf="@+id/RR_filter"
                        android:background="@drawable/roundbttn_white_one">

                        <ImageView
                            android:id="@+id/img_heat"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/padding10"
                            android:layout_centerVertical="true"
                            android:src="@drawable/heater"
                            android:layout_width="@dimen/padding30"
                            android:layout_height="@dimen/padding30"
                            >
                        </ImageView>


                        <RelativeLayout
                            android:orientation="vertical"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/padding20"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/img_heat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            >

                            <TextView
                                android:id="@+id/txt_heat"
                                android:singleLine="true"
                                android:textColor="@color/black"
                                android:textSize="@dimen/padding20"
                                android:textStyle="bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Heating" />


                        </RelativeLayout>

                        <ImageView
                            android:id="@+id/img_three"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/padding10"
                            android:layout_centerVertical="true"
                            android:src="@drawable/check_icon"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            >
                        </ImageView>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_marginBottom="@dimen/padding20"
                        android:layout_marginTop="100dp"
                        android:id="@+id/RR_next_house"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_width="match_parent"
                        android:background="@drawable/roundbttn_red"
                        android:layout_height="55dp">

                        <RelativeLayout
                            android:paddingLeft="@dimen/padding10"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            >
                            <ImageView
                                android:layout_marginRight="@dimen/padding20"
                                android:tint="@color/white"
                                android:layout_alignParentRight="true"
                                android:id="@+id/img_mail"
                                android:layout_centerVertical="true"
                                android:layout_width="@dimen/padding20"
                                android:layout_height="@dimen/padding20"
                                android:src="@drawable/left_arrow"
                                >
                            </ImageView>

                            <TextView
                                android:layout_marginLeft="@dimen/padding20"
                                android:textSize="@dimen/padding16"
                                android:textStyle="bold"
                                android:layout_centerVertical="true"
                                android:textColor="@color/white"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Next"
                                />

                        </RelativeLayout>

                    </RelativeLayout>

                </LinearLayout>

            </RelativeLayout>

        </RelativeLayout>

    </ScrollView>


</RelativeLayout>