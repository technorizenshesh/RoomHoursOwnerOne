<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grayLight"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <RelativeLayout
            android:layout_marginTop="@dimen/padding20"
            android:layout_gravity="center"
            android:layout_width="@dimen/_250sdp"
            android:layout_height="@dimen/_250sdp"
            >
            <ImageView
                android:layout_marginLeft="-5dp"
                android:layout_marginRight="-5dp"
                android:layout_marginTop="-5dp"
                android:scaleType="centerCrop"
                android:src="@drawable/img_final"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
            </ImageView>
        </RelativeLayout>

        <TextView
            android:layout_gravity="center"
            android:layout_below="@+id/img_logo"
            android:layout_marginTop="@dimen/padding40"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hay tu reserva ahora!"
            android:textColor="#A81D1A"
            android:textSize="@dimen/padding30"/>

        <RelativeLayout
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/padding50"
            android:id="@+id/RR_comtinue"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_width="@dimen/_200sdp"
            android:background="@drawable/roundbttn_red"
            android:layout_height="55dp">

            <RelativeLayout
                android:paddingLeft="@dimen/padding10"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <TextView
                    android:layout_centerInParent="true"
                    android:textSize="@dimen/padding16"
                    android:textStyle="bold"
                    android:layout_centerVertical="true"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="QUIERO RESERVAR"
                    />

            </RelativeLayout>



        </RelativeLayout>

    </LinearLayout>







</RelativeLayout>